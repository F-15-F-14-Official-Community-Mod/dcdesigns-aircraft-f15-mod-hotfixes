<?xml version="1.0" encoding="utf-8" ?>
<Gauge Name="Navigation" Version="1.0">
  <Update Frequency="60"/>

  <Element>
    <Image Name="VC_Nav.bmp"/>
    <Visible>(A:Circuit Avionics on, bool)</Visible>
  </Element>



  <Element>
    <Visible>(A:Circuit Avionics on, bool)</Visible>
    <Position X="80" Y="70"/>
